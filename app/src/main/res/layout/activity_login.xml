<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ui.login.LoginActivity" android:background="@drawable/background_login">

    <Button
            android:text="Login With Twitter"
            android:layout_width="314dp"
            android:layout_height="51dp" android:id="@+id/button_login_twitter"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.402" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" android:background="@color/colorAccent" android:textColor="#FBFAFA"/>
    <EditText
            android:id="@+id/username"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:autofillHints="@string/prompt_email"
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="64dp" app:layout_constraintHorizontal_bias="0.512" android:textColor="#F8F4F4"
            android:textColorHint="#FBF9F9"/>
    <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:autofillHints="@string/prompt_password"
            android:hint="@string/prompt_password"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/username" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="36dp" android:textColor="#FFFFFF" android:textColorHint="#FAF6F6"/>
    <Button
            android:id="@+id/login"
            android:enabled="false"
            android:layout_width="333dp"
            android:layout_height="45dp"
            android:layout_gravity="start"
            android:text="@string/action_sign_in"
            app:layout_constraintTop_toBottomOf="@+id/password"
            android:layout_marginTop="68dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:backgroundTint="#FF0505"
            android:textColor="#FDFCFC"/>
    <ProgressBar
            android:id="@+id/loading"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/password"
            app:layout_constraintStart_toStartOf="@+id/password"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"/>
    <Button
            android:text="Login With Google"
            android:layout_width="313dp"
            android:layout_height="51dp" android:id="@+id/button_login_google"
            app:layout_constraintTop_toBottomOf="@+id/login"
            app:layout_constraintBottom_toTopOf="@+id/button_login_facebook"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.908" app:layout_constraintHorizontal_bias="0.53"
            android:background="@color/design_default_color_error" android:textColor="#FAF7F7"/>
    <Button
            android:text="Login With Facebook"
            android:layout_width="311dp"
            android:layout_height="51dp" android:id="@+id/button_login_facebook"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.53"
            app:layout_constraintBottom_toTopOf="@+id/button_login_twitter" android:layout_marginBottom="12dp"
            android:textColor="#FBF7F7" android:background="@color/design_default_color_primary"
            android:textColorHint="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>